<% layout("./layouts/boilerplate.ejs") %>

<div class="container mt-4">
  <h3>All Listings</h3>
  <ul class="row list-unstyled">
    <% for (const listItem of allListings) { %>
    <li class="col-md-4 col-sm-6 mb-4 d-flex justify-content-center">
      <a class="listing-link" href="/listing/<%= listItem._id %>">
        <div class="card">
          <img
            src="<%= listItem.image %>"
            class="card-img-top"
            alt="listing image"
          />
          <div class="card-img-overlay">
            
          </div>
          <div class="card-body">
            <b><%= listItem.title%></b>
            
            <p class="card-text">
              <%= listItem.price.toLocaleString( "en-IN", {
              maximumFractionDigits: 0, style: "currency", currency: "INR", } );
              %> / night
            </p>
          </div>
        </div>
      </a>
    </li>
    <% } %>
  </ul>
</div>
