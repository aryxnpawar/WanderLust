<% layout("./layouts/boilerplate.ejs") %>

<div class="container mt-4 mb-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h4 class="text-center mb-4"><%= listing.title %></h4>

      <div class="card listing-card mx-auto w-75">
        <img
          src="<%= listing.image %>"
          class="card-img-top show-img"
          alt="Listing Image"
        />
        <div class="card-body">
          <p class="card-text">
            <%= listing.description %> <br />
            <%= listing.price.toLocaleString( "en-IN", { maximumFractionDigits:
            0, style: "currency", currency: "INR", } ); %> <br />
            <%= listing.location %> <%= listing.country %>
          </p>
          <div class="d-flex">
            <a href="/listings/<%= listing._id %>/edit"
              ><button class="btn btn-dark me-4">Edit</button></a
            >

            <form
              action="/listings/<%= listing._id %>?_method=DELETE"
              method="post"
            >
              <button class="delete-btn btn btn-dark" type="submit">
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-8">
      <hr />
      <h4 class="text-center mt-3">Leave a Review</h4>

      <form
        class="needs-validation"
        action="/listings/<%= listing._id %>/reviews"
        method="post"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input
            class="form-range"
            id="rating"
            name="review[rating]"
            type="range"
            min="1"
            max="5"
            value="3"
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="comment">Comment</label>
          <textarea
            class="form-control"
            name="review[comment]"
            id="comment"
            required
          ></textarea>
          <div class="invalid-feedback">Please write a review.</div>
        </div>
        <button class="btn btn-dark mb-4" type="submit">Submit</button>
      </form>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-8">
      <hr />
      <h4 class="text-center mt-3 mb-3">All Reviews</h4>
      <ul>

        
        <div class="container">
        <div class="row">
        <% for (const review of listing.reviews) { %>
          <div class="col-md-6 col-sm-12">
            <div class="card mb-3">
              <div class="card-body p-3">
                <h5 class="card-title">John Doe</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">Date</h6>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text"><%= review.rating %> Stars</p>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                  <button class="btn btn-sm btn-dark" type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      </ul>
    </div>
  </div>
</div>
