<% layout("/layouts/boilerplate.ejs") %>

<div class="container mt-4">
  <h4 class="text-center mb-4">Login for WanderLust</h4>

  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-8">
      <form
        action="/login"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label" for="username">Username :</label>
          <input
            id="username"
            class="form-control"
            name="username"
            type="text"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="image">Password :</label>
          <input
            id="password"
            class="form-control"
            name="password"
            type="password"
            required
          />
        </div>
        <button class="add-btn btn btn-dark mb-4" type="submit">Login</button>
      </form>
    </div>
  </div>
</div>
